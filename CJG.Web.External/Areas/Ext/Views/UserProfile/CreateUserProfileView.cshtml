@{
    ViewBag.Title = "Create User Profile";
}
<div class="row" ng-controller="CreateUserProfile">
    <div class="main">
        <div ng-if="alert.message" class="row row--alert">
            <div class="alert" ng-class="'alert--' + alert.type" role="alert" ng-bind-html="alert.message"></div>
        </div>

        <h1 class="header--small">Create User Profile</h1>
        <p class="subheader--step">Step 2 of 2</p>
        <h2 class="subheader">Business Contact Information</h2>
        <p class="text--small text--uppercase">* Information must be provided</p>
        <p>In order to complete your profile we just need a little more information.</p>
        @Html.Partial("_UserProfileDetails")

        <a ng-click="displayProgramDetails=!displayProgramDetails">
            <h3 class="subheader--body action">
                Select Grant Program Preferences
            </h3>
        </a>
        <p>
            You must select one or more grant programs from those available in order to create and submit grant applications. When grant programs are changed you may need to update your preferences here.
        </p>
        <p>
            Use the link above to select your grant program preferences.
        </p>
        <div id="grantProgramPreferences" ng-if="displayProgramDetails">
            @Html.Partial("_GrantProgramPreferences")
        </div>
        <div class="button-group">
            <button class="btn btn--secondary btn--back" ng-click="confirmDetails()">Back</button>
            <button class="btn btn--primary btn--forward" ng-click="save()">Create Profile</button>
        </div>
    </div>
</div>
