@{
    ViewBag.Title = "Manage Grant Opening";
}
<div id="manage-opening-grant">
    <div ng-controller="GrantOpeningsView" ng-fiscal-year-id="@ViewBag.FiscalYearId" ng-grant-program-id="@ViewBag.GrantProgramId" ng-app-date="@ViewBag.AppDateTime">
        <div ng-if="alert.message" class="row row--alert">
            <div class="alert" ng-class="'alert--' + alert.type" role="alert" ng-bind-html="alert.message"></div>
        </div>
        <div>
            <h2 class="header__title">Manage Grant Opening</h2>
        </div>
        <div class="form__group-set">
            <div class="form__group">
                <label class="form__label">Fiscal Year</label>
                <div class="form__control">
                    <div class="selectmenu">
                        <select class="form-control" ng-model="selectedFiscalYear" ng-options="item.Id as item.Caption for item in fiscalYears" ng-change="onFiscalYearChange()">
                            <option value="" class="">&lt; Select value &gt;</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form__group">
                <label class="form__label">Grant Program</label>
                <div class="form__control">
                    <div class="selectmenu">
                        <select class="form-control" ng-model="selectedGrantProgram" ng-options="item.Id as item.Name for item in grantPrograms" ng-change="onGrantProgramChange()">
                            <option value="" class="">&lt; Select value &gt;</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div ng-show="showGrantStreamInformation">
            <table class="table table--stream-matrix">
                <thead>
                    <tr>
                        <th width="325">
                            <b>Grant Stream</b>
                        </th>
                        <th ng-repeat="t in model.TrainingPeriods">
                            <b>{{t.Caption}}</b>
                            <br />
                            {{t.TrainingPeriodDuration}}
                        </th>
                        <th>
                            <b>Stream Totals</b>
                            <br />
                            ($)
                        </th>
                    </tr>
                </thead>
                <tbody ng-if="model.TrainingPeriods.length > 0">
                    <tr ng-repeat="s in model.GrantStreams">
                        <td>
                            {{s.Name}}
                        </td>
                        <td class="text--right" ng-repeat="t in s.GrantStreamInformation">
                            <div ng-switch on="t.DisplayMode">
                                <div ng-switch-when="1">
                                    <a ng-click="initSelectOpeningGrantModal(t.GrantOpeningId)">
                                        {{t.DisplayTargetAmount}}
                                    </a>
                                    <br />
                                    <text>
                                        <span class="label {{getOpeningStateCss(t.OpenState)}}">{{getOpeningStateLabel(t.OpenState)}}</span>
                                    </text>
                                </div>
                                <div ng-switch-when="3">

                                </div>
                                <div ng-switch-when="2">
                                    <br />
                                    <span class="label label--danger">Unavailable</span>
                                </div>
                                <div ng-switch-default>
                                    <a ng-if="s.IsActive" ng-click="initCreateOpeningGrantModal(t.TrainingPeriodId, s.Id)">
                                        <span>Create</span>
                                    </a>
                                </div>
                            </div>
                        </td>
                        <td class="cell-highlight text--right">
                            {{s.DisplayTotalTargetAmount}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Totals
                        </td>
                        <td class="cell-highlight text--right" ng-repeat="t in model.TrainingPeriods">
                            {{t.DisplayTotalTrainingPeriodAmount}}
                        </td>
                        <td class="cell-highlight text--right">
                            <b>{{model.DisplayGrantTotal}}</b>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

