@using CJG.Core.Entities
<div ng-controller="GrantProgramEligibility" class="form-section" ng-show="model.Id">
	<span class="panel-section-item">
		<span class="panel-section-title" ng-click="toggle($event)">Program Eligibility Description</span>
		<span class="panel-section-buttons">
			<span><button class="btn btn--empty" style="pointer-events: none;" tabindex="-1">&nbsp;</button></span>
			<section-edit-buttons ng-model="section.editing"></section-edit-buttons>
			<span class="small" ng-class="section.show ? 'up-arrow': 'down-arrow'" ng-click="toggle($event)"></span>
		</span>
	</span>

	<div class="panel-section-content" ng-if="section.show">
		<div class="form form-section-container">
			<div class="form__group">
				<div class="form__label"><label class="form__label active-link" ng-click="preview()" id="test-message">Test Description:</label></div>
				<div class="form__control">
					<div class="control-wrapper">
						<textarea ng-model="model.EligibilityDescription" ng-validation ng-editing></textarea>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
