@using CJG.Core.Entities
<div ng-controller="GrantStreamReporting" class="form-section" ng-show="model.Id">
    <span class="panel-section-item">
        <span class="panel-section-title" ng-click="toggle($event)">Participant and Completion Reporting</span>
        <span class="panel-section-buttons">
            <span><button class="btn btn--empty" style="pointer-events: none;" tabindex="-1">&nbsp;</button></span>
            <section-edit-buttons ng-model="section.editing"></section-edit-buttons>
            <span class="small" ng-class="section.show ? 'up-arrow': 'down-arrow'" ng-click="toggle($event)"></span>
        </span>
    </span>

    <div class="panel-section-content" ng-if="section.show">
        <div class="form-section-container">
            <div class="form__group" style="width: auto;">
                <div class="control-wrapper">
                    <input type="checkbox" ng-model="model.CanApplicantReportParticipants" id="can-applicant-report-participants" ng-disabled="!section.editing" />
                    <label for="can-applicant-report-participants" ng-validation="errors.CanApplicantReportParticipants">Assessor can allow applicant to report participants (by grant file)</label>
                </div>
                <div class="control-wrapper">
                    <input type="checkbox" ng-model="model.HasParticipantOutcomeReporting" id="participant-outcome-reporting" ng-disabled="!section.editing" />
                    <label for="participant-outcome-reporting" ng-validation="errors.HasParticipantOutcomeReporting">Participant employer is reported in completion report</label>
                </div>
                <div class="control-wrapper" ng-if="model.ProgramType === @((int)ProgramTypes.EmployerGrant)">
                    <input type="checkbox" ng-model="model.RequireAllParticipantsBeforeSubmission" id="all-participants-before-submission" ng-disabled="!section.editing" />
                    <label for="all-participants-before-submission" ng-validation="errors.RequireAllParticipantsBeforeSubmission">Require all PIFs before application submission</label>
                </div>
            </div>
        </div>
    </div>
</div>