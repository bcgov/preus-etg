<div ng-controller="CommunityManagement">
	<div ng-if="ngDialogData.community" class="edit-model-modal">
		<h3>{{ngDialogData.community.Id ? 'Edit' : 'Add'}} Community</h3>
		<hr />
		<div ng-if="alert.message" class="row row--alert">
			<div class="alert" ng-class="'alert--' + alert.type" role="alert" ng-bind-html="alert.message"></div>
		</div>
		<div>
			<label>Id</label>
			<input type="text" ng-model="ngDialogData.community.Id" ng-value="ngDialogData.community.Id ? ngDialogData.community.Id : ''" disabled />
		</div>
		<div>
			<label>Caption</label>
			<input type="text" ng-model="ngDialogData.community.Caption" ng-validation="errors.Caption" />
		</div>
		<div>
			<label>Active</label>
			<div class="selectmenu" ng-validation="errors.Active">
				<select class="input--full" type="selectmenu" ng-model="ngDialogData.community.Active" ng-options="item.Key as item.Value for item in activeOptions" ng-disabled="ngDialogData.community.Id ? false : true" />
			</div>
		</div>
		<hr />
		<button class="btn btn--secondary pull-left" ng-click="closeThisDialog()">Cancel</button>
		<button class="btn btn--primary pull-right" ng-click="saveCommunity()">Save</button>
	</div>
</div>
