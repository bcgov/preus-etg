@using CJG.Web.External.Areas.Ext.Controllers
@{
    ViewBag.Title = "Participant info collection";

    bool reportedByApplicant = TempData["ReportedByApplicant"] == null ? false : (bool)TempData["ReportedByApplicant"];
}

<div id="participant-info-collection">
    <div class="row">
        <div class="main">
            <h1>Participant information collection</h1>
            @if (!reportedByApplicant)
            {
                <div id="step6-participant-info">
                    <p class="subheader--step">Step 6 of 6</p>
                    <h2 class="subheader">Confirmation of Completion</h2>

                    <p>
                        You have completed the entry of your personal information as a participant in the training program.<br />
                        <br />
                        Thank you.<br />
                    </p>
                </div>
            }
            else
            {

                <div id="step6-participant-info">
                    <p class="subheader--step">Step 5 of 5</p>

                    <h2 class="subheader">Confirmation of Completion</h2>

                    <p>You have successfully reported the participant information for</p>

                    <p> @TempData["ParticipantName"]</p>

                    <p>The participant will appear in your participant list.</p>

                    <p>
                        If you have made an error in reporting, you may remove the participant from your participant list and all personal information for the participant will be removed from the system.
                    </p>

                    <p>
                        <b>Always use secure destruction methods for disposing of hardcopy forms containing personal information.</b>
                    </p>

                    <br />
                    <a type="button" class="btn btn--primary" href="@Url.Action(nameof(ParticipantReportingController.ParticipantReportingView), nameof(ParticipantReportingController).Replace("Controller", ""), new { Area = "Ext", grantApplicationId = @TempData["ParticipantGrantApplicationId"] })">Done</a>

                    <br /><br />

                </div>
            }

        </div>


    </div>
</div>
